<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/preferred_city"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ankitha.gullyfood.gullyfoodlayouts.PreferredCity">

    <include layout="@layout/toolbar_layout"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>

    <ImageView
        android:id="@+id/imageView1"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/editText1"
        android:layout_alignBottom="@+id/editText1"
        android:layout_alignRight="@+id/editText1"
        android:clickable="true"
        android:src="@drawable/ic_location" />

    <EditText
        android:id="@+id/editText1"
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin">

    </EditText>

    <TextView
        android:text="@string/prefered_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@android:color/black"
        android:textSize="20dp"
        android:id="@+id/textView8"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_marginTop="20dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/activity_large_button_width"
                android:layout_height="@dimen/activity_button_height"
                android:text="Bengaluru"
                android:id="@+id/button1"
                android:background="@drawable/my_rounded_button"/>

            <Button
                android:text="Goa"
                android:layout_width="@dimen/activity_small_button_width"
                android:layout_marginLeft="5dp"
                android:layout_height="@dimen/activity_button_height"
                android:background="@drawable/my_rounded_button"
                android:id="@+id/button2" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_layout_margin_top"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/activity_small_button_width"
                android:layout_height="@dimen/activity_button_height"
                android:text="Delhi"
                android:id="@+id/button3"
                android:background="@drawable/my_rounded_button"/>

            <Button
                android:layout_width="@dimen/activity_large_button_width"
                android:layout_height="@dimen/activity_button_height"
                android:text="Ahmedabad"
                android:layout_marginLeft="5dp"
                android:id="@+id/button4"
                android:background="@drawable/my_rounded_button"/>
        </LinearLayout>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_margin"
        android:layout_marginRight="@dimen/activity_margin"
        android:layout_marginTop="@dimen/activity_layout_margin_top"
        android:orientation="horizontal">

        <Button
            android:layout_width="@dimen/activity_large_button_width"
            android:layout_height="@dimen/activity_button_height"
            android:text="Lucknow"
            android:id="@+id/button5"
            android:background="@drawable/my_rounded_button"/>

            <Button
                android:layout_width="@dimen/activity_small_button_width"
                android:layout_height="@dimen/activity_button_height"
                android:text="Hubballi"
                android:layout_marginLeft="5dp"
                android:id="@+id/button6"
                android:background="@drawable/my_rounded_button"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_margin"
            android:layout_marginRight="@dimen/activity_margin"
            android:layout_marginTop="@dimen/activity_layout_margin_top"
            android:orientation="horizontal">

            <Button
                android:layout_width="@dimen/activity_small_button_width"
                android:layout_height="@dimen/activity_button_height"
                android:text="Pune"
                android:id="@+id/button7"
                android:background="@drawable/my_rounded_button"/>

            <Button
                android:layout_width="@dimen/activity_large_button_width"
                android:layout_height="@dimen/activity_button_height"
                android:text="Nasik"
                android:layout_marginLeft="5dp"
                android:id="@+id/button8"
                android:background="@drawable/my_rounded_button"/>
        </LinearLayout>
    </LinearLayout>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/navigate_next"
        android:background="@drawable/my_rounded_button"
        android:layout_marginBottom="10dp"
        android:id="@+id/imageButton"
        android:onClick="onClickNext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
