<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/prefrence_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ankitha.gullyfood.gullyfoodlayouts.PrefrenceScreen">

    <TextView
        android:text="@string/preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:layout_marginTop="51dp"
        android:id="@+id/textView9"
        android:textAppearance="@style/TextAppearance.AppCompat.Large" />

    <TextView
        android:text="Pick any 5 choices to continue."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView9"
        android:textColor="@android:color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/textView10"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/navigate_next"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="@drawable/my_rounded_button"
        android:id="@+id/imageButton2" />
</RelativeLayout>
